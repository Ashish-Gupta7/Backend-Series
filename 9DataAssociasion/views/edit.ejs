<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <!-- logout button -->
        <div class="flex justify-end">
            <a class="bg-red-500 px-5 py-2 text-sm rounded-md inline-block" href="/logout">Logout</a>
        </div>
        <form action="/update/<%= post._id %>" method="post">
            <textarea
                class="block w-1/3 p-3 mb-1 resize-none outline-none border-2 border-zinc-800 bg-zinc-950 rounded-md"
                placeholder="What's on your mind ?" name="content"><%= post.content %></textarea>
            <input class="px-5 py-2 text-black text-sm bg-yellow-500 block rounded-md" type="submit" value="Update your post">
        </form>

    </div>
</body>

</html>